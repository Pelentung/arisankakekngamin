
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isUser(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    match /users/{userId} {
      // Any signed-in user can create their own user profile document.
      allow create: if isUser(userId);
      
      // Users can only read/update their own profile. Admins can read/update any profile.
      allow get, update: if isUser(userId) || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      
      // Admins can delete any user profile.
      allow delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;

      // All signed-in users can list other user profiles (e.g., for selection dropdowns).
      allow list: if isSignedIn();
    }

    match /groups/{groupId} {
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      allow read: if isSignedIn();
    }

    match /members/{memberId} {
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      allow read: if isSignedIn();
    }

    match /payments/{paymentId} {
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      allow read: if isSignedIn();
    }

    match /expenses/{expenseId} {
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      allow read: if isSignedIn();
    }

    match /contributionSettings/{settingId} {
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      allow read: if isSignedIn();
    }

    match /notes/{noteId} {
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      allow read: if isSignedIn();
    }
  }
}
