rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is an admin
    function isAdmin(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.isAdmin == true;
    }
    
    // Users can create their own profile, but cannot make themselves admin
    // Admins can update any user profile
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == userId && request.resource.data.isAdmin == false;
      allow update: if isAdmin(request.auth.uid);
    }
    
    // Default-deny all other collections
    match /{collection}/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isAdmin(request.auth.uid);
    }
  }
}
